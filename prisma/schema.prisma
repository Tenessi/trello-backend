generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  email String @unique
  name String?
  password String

  columns Column[]
  tasks Task[]

  @@map("user")
}

model Task {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  title String
  description String?
  order Int? @default(autoincrement())

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  column Column? @relation(fields: [status], references: [title], onUpdate: Cascade, onDelete: Cascade)
  status String? @default("do") @map("column_status")

  @@map("task")
}

model Column {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  title String? @default("do") @unique
  order Int? @default(autoincrement())

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  tasks Task[]

  @@map("column")
}
